[flake8]
# Line length set to 160 to match current codebase (ruff enforces formatting)
max-line-length = 160

# Complexity
max-complexity = 15

# Exclude common directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache,
    node_modules

# Ignore certain error codes (industry standard ignores)
extend-ignore =
    # E203: whitespace before ':' (not PEP 8 compliant, conflicts with Black)
    E203,
    # W503: line break before binary operator (outdated, conflicts with PEP 8)
    W503,
    # W293: blank line contains whitespace (auto-fixable, non-breaking)
    W293,
    # W291: trailing whitespace (auto-fixable, non-breaking)
    W291,
    # E501: long lines (managed by Black/Ruff)
    E501,
    # C901: complexity limits (tracked via Ruff)
    C901,
    # E402: imports not at top of file (intentional in some shims/tests)
    E402,
    # E265: block comments style (headers/duplication retained)
    E265,
    # E303/E306: blank line spacing loosened for test fixtures and generated stubs
    E303,
    E306,
    # W391: allow trailing blank line where harmless
    W391
    # D212: Multi-line docstring summary should start at the first line (Google style)
    D212,
    # D107: Missing docstring in __init__ (often obvious from class docstring)
    D107,
    # D100: Missing docstring in public module (not always necessary)
    D100

# Enable warnings that are disabled by default
enable-extensions =
    # G: Logging format checker (if using flake8-logging-format plugin)
    # You can add more as needed

# Per-file ignores
per-file-ignores =
    # __init__.py files can have unused imports (F401) and import violations
    __init__.py:F401,F403
    # Test files can be more lenient
    tests/*:E501,F841
    # Configuration files
    setup.py:E501

# Docstring conventions (requires pep257 or flake8-docstrings)
docstring-convention = google

# Import order checking (requires flake8-import-order plugin)
import-order-style = google
application-import-names = sigil_mcp_server

# Inline comments should be at least 2 spaces away
inline-quotes = single
